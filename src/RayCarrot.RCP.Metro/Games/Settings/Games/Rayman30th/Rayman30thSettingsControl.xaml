<UserControl x:Class="RayCarrot.RCP.Metro.Games.Settings.Rayman30thSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:rcp="clr-namespace:RayCarrot.RCP.Metro"
             xmlns:settings="clr-namespace:RayCarrot.RCP.Metro.Games.Settings"
             ResxExtension.DefaultResxName="{x:Static rcp:LocalizationManager.ResourcePath}"
             IsTabStop="False"
             mc:Ignorable="d"
             d:Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
             d:Background="{DynamicResource MahApps.Brushes.ThemeBackground}"
             d:DesignWidth="400"
             d:DataContext="{d:DesignInstance settings:Rayman30thSettingsViewModel}">
    <StackPanel>

        <TextBlock Style="{StaticResource RCP.Styles.TextBlock.Header}"
                   Text="{Resx Config_Resolution}"
                   Margin="0 0 0 8" />

        <rcp:GraphicsModeSelection DataContext="{Binding Path=GraphicsMode, Mode=OneTime}"
                                   Margin="0 0 0 8" />

        <CheckBox Content="{Resx Config_Fullscreen}"
                  ToolTip="{Resx Config_FullscreenInfo}"
                  Style="{StaticResource RCP.Styles.CheckBox.Default}"
                  IsChecked="{Binding Path=FullscreenMode}"
                  Margin="0 0 0 8"/>

        <TextBlock Style="{StaticResource RCP.Styles.TextBlock.Header}"
                   Text="{Resx Config_Language}"
                   Margin="0 4 0 8" />

        <ComboBox SelectedIndex="{Binding Path=SelectedLanguageIndex}"
                  ItemsSource="{Binding Path=AvailableLanguages, Mode=OneTime}"
                  HorizontalAlignment="Left"
                  Margin="0 0 0 8">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Path=Value}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <TextBlock Style="{StaticResource RCP.Styles.TextBlock.Header}"
                   Text="{Resx Config_Sound}"
                   Margin="0 4 0 8" />

        <!-- TODO-LOC -->
        <CheckBox Content="Menu music"
                  Style="{StaticResource RCP.Styles.CheckBox.Default}"
                  IsChecked="{Binding Path=IsMenuMusicEnabled}"
                  Margin="0 0 0 8" />

        <!-- TODO-LOC -->
        <TextBlock Text="Volume"
                   Margin="0 0 0 4" />

        <Slider Value="{Binding Path=Volume}"
                Minimum="0"
                Maximum="10"
                TickPlacement="BottomRight"
                Width="200"
                AutoToolTipPlacement="TopLeft"
                HorizontalAlignment="Left"
                Margin="0 0 0 8" />

    </StackPanel>

</UserControl>
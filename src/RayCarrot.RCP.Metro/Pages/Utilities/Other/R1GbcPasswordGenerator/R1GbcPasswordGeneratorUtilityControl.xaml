<UserControl x:Class="RayCarrot.RCP.Metro.Pages.Utilities.R1GbcPasswordGeneratorUtilityControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:rcp="clr-namespace:RayCarrot.RCP.Metro"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:utilities="clr-namespace:RayCarrot.RCP.Metro.Pages.Utilities"
             ResxExtension.DefaultResxName="{x:Static rcp:LocalizationManager.ResourcePath}"
             mc:Ignorable="d"
             d:Background="{DynamicResource MahApps.Brushes.ThemeBackground}"
             d:Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
             d:DesignWidth="550" 
             d:DataContext="{d:DesignInstance utilities:R1GbcPasswordGeneratorUtilityViewModel}">

    <StackPanel>
        <i:Interaction.Behaviors>
            <rcp:UnifiedMarginBehavior Margin="{StaticResource RCP.Thicknesses.Vertical}" />
        </i:Interaction.Behaviors>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0"
                     MaxLength="10"
                     Margin="0 0 10 0">
                <TextBox.Text>
                    <Binding Path="Password" UpdateSourceTrigger="PropertyChanged">
                        <Binding.ValidationRules>
                            <utilities:R1GbcPasswordGeneratorUtilityPasswordValidationRule/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>

            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Content="{Resx R1Passwords_Generate}"
                        Command="{Binding Path=GeneratePasswordCommand, Mode=OneTime}"
                        Margin="0 0 10 0"/>

                <Button Grid.Column="1"
                        Content="{Resx R1Passwords_Load}"
                        Command="{Binding Path=LoadPasswordCommand, Mode=OneTime}"/>

            </Grid>

        </Grid>

        <!-- Level cages -->
        <ItemsControl ItemsSource="{Binding Path=Levels, Mode=OneTime}"
                      d:ItemsSource="{d:SampleData ItemCount=3}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="{StaticResource RCP.Thicknesses.VerticalSmall}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MaxWidth="200" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="{Binding Path=LevelName}"
                                   Margin="{StaticResource RCP.Thicknesses.Horizontal}" />

                        <ItemsControl Grid.Column="1"
                                      ItemsSource="{Binding Path=Cages, Mode=OneTime}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Path=DisplayName}"
                                              IsChecked="{Binding Path=IsCollected}"
                                              Margin="{StaticResource RCP.Thicknesses.Horizontal}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- TODO-LOC -->
        <CheckBox Content="Unlocked world map"
                  IsChecked="{Binding Path=UnlockedWorldMap}"
                  Margin="{StaticResource RCP.Thicknesses.Horizontal}" />

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" MinWidth="110" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid.Resources>
                <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource {x:Type TextBlock}}">
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="Padding" Value="0 0 10 0" />
                </Style>
            </Grid.Resources>

            <i:Interaction.Behaviors>
                <rcp:UnifiedMarginBehavior Margin="{StaticResource RCP.Thicknesses.Vertical}" />
            </i:Interaction.Behaviors>

            <TextBlock Grid.Column="0"
                       Grid.Row="0"
                       Text="{Resx R1Passwords_Lives}"/>

            <mah:NumericUpDown Grid.Column="1"
                               Grid.Row="0"
                               Value="{Binding Path=LivesCount}"
                               Minimum="1"
                               Maximum="99" />

            <!-- TODO-LOC -->
            <TextBlock Grid.Column="0"
                       Grid.Row="1"
                       Text="Level"/>

            <!-- TODO-LOC -->
            <ComboBox Grid.Column="1"
                      Grid.Row="1"
                      SelectedIndex="{Binding Path=Level}">
                <TextBlock Text="Spellbound Forest 1" />
                <TextBlock Text="Spellbound Forest 2" />
                <TextBlock Text="Spellbound Forest 3" />
                <TextBlock Text="Spellbound Forest 4" />
                <TextBlock Text="Airy Tunes 1" />
                <TextBlock Text="Airy Tunes 2" />
                <TextBlock Text="Airy Tunes 3" />
                <TextBlock Text="Airy Tunes 4" />
                <TextBlock Text="Rainy Forest 1" />
                <TextBlock Text="Rainy Forest 2" />
                <TextBlock Text="Rainy Forest 3" />
                <TextBlock Text="Rocky Peaks 1" />
                <TextBlock Text="Rocky Peaks 2" />
                <TextBlock Text="Rocky Peaks 3" />
                <TextBlock Text="Rocky Peaks 4" />
                <TextBlock Text="Ancient Forest 1" />
                <TextBlock Text="Ancient Forest 2" />
                <TextBlock Text="Ancient Forest 3" />
                <TextBlock Text="Fiery Depths 1" />
                <TextBlock Text="Fiery Depths 2" />
                <TextBlock Text="Fiery Depths 3" />
                <TextBlock Text="Fiery Depths 4" />
                <TextBlock Text="Arcane Forest 1" />
                <TextBlock Text="Arcane Forest 2" />
                <TextBlock Text="Arcane Forest 3" />
                <TextBlock Text="Arcane Forest 4" />
                <TextBlock Text="Arcane Forest 5" />
                <TextBlock Text="Dark Legacy 1" />
                <TextBlock Text="Dark Legacy 2" />
                <TextBlock Text="Dark Legacy 3" />
                <TextBlock Text="Dark Legacy 4" />
                <TextBlock Text="Time Attack" />
                <TextBlock Text="Unused 1" />
                <TextBlock Text="Unused 2" />
            </ComboBox>
        </Grid>

    </StackPanel>

</UserControl>